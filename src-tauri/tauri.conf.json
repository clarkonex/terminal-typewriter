{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Terminal Typewriter",
  "version": "0.2.0",
  "identifier": "com.philjung.terminal-typewriter",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Terminal Typewriter",
        "width": 1000,
        "height": 700,
        "minWidth": 600,
        "minHeight": 400,
        "decorations": true,
        "resizable": true,
        "center": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
